.title {
    font-size: larger ;
    color: black;
  }
.content {
  width: 100%;
}
.submit {
  margin-top: 30rpx;
  text-align: center;
}
.cart-textarea {
    height: 250rpx;
    overflow: hidden;
    background-color: #fff;
}
.content .top-service {
    display: flex;
    align-items: center;
    padding: 10rpx 0;
}
.content .card {
    position: relative;
    width: 30%;
    height: 100rpx;
    font-size: smaller;
    margin: 0 1% 10rpx 1%;
    border-radius: 12rpx;
    overflow: hidden;
    box-sizing: border-box;
    border: 3rpx solid #ddd;
    padding: 5px;
    display: flex;
    align-items: center;
}
.content .card-icon {
    color: #fff;
    position: absolute;
    left: 1.5rpx;
    top: 1.5rpx;
    z-index: 1;
}
.content .card .t-checkbox {
    font-size: small;
}
.content .card-active {
    border-color: #07c160;
    color: #fff;
}
.content .card-active::after {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 0;
    border: 12px solid #07c160;
    border-bottom-color: transparent;
    border-right-color: transparent;
}

.content .checkbox-wrapper scroll-view .t-checkbox {
    padding: 0;
}
.content .t-button {
    background-color: #07c160;
}
.content .checkbox-label {
    padding-left: 20rpx;
}
.content .checkbox-wrapper {
    width: 100%;
    height: 330rpx;
    overflow: hidden;
    margin-top: 10rpx;
    border-bottom: 1rpx solid #ccc;
}
.content .checkbox-wrapper scroll-view {
    height: 100%;
    background-color: #FFF;
}
.content .selected-text {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    color: #999;
}
.content .checkbox-wrapper .box {
    display: flex;
    flex-wrap: wrap;
}  
.content .checkbox-wrapper .box .t-checkbox-option {
    display: block!important;
    width: 49%!important;
    height: 90rpx;
}
.require-dot {
    color: #FF4136;
}

t-textarea text {
    font-size: medium;
}