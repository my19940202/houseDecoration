/**index.wxss**/

.content {
  width: 100%;
}
.swiper-wrapper {
    width: 100%;
    height: auto;
    text-align: center;
}
.submit {
    margin-top: 30rpx;
    text-align: center;
}
.bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    background-color: #fff;
}
.bottom-bar .t-button {
    border: 1px solid #07c160;
    color: #07c160;
    border-radius: 30rpx;
}
.bottom-bar .left {
    position: absolute;
    top: 10rpx;
    left: 10rpx;
}
.bottom-bar .right {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    background-color: #07c160;
    color: #fff;
}